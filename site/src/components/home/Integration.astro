---
import { resolveDocsUrl } from "../../utils/urlResolver";

const buildTools = [
  {
    name: "webpack",
    url: "https://webpack.js.org/",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/webpack/webpack-original.svg",
  },
  {
    name: "vite",
    url: "https://vitejs.dev/",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/vitejs/vitejs-original.svg",
  },
  {
    name: "rollup", 
    url: "https://rollupjs.org/",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/rollup/rollup-original.svg",
  },
  {
    name: "esbuild",
    url: "https://esbuild.github.io/",
    logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/esbuild/esbuild-original.svg",
  },
];
---

<div class="xl:flex xl:flex-row-reverse py-12 sm:py-16 lg:py-20 gap-8 lg:gap-16 xl:gap-28 px-4 sm:px-6 lg:px-8">
  <div class="xl:max-w-xl flex flex-col justify-center font-outfit">
    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-black leading-tight">
      Works With All Major <span class="bg-clip-text text-transparent" style="background: linear-gradient(90deg, rgba(255, 69, 0, 1) 2%, rgba(255, 140, 0, 1) 55%, rgba(255, 165, 0, 1) 100%); -webkit-background-clip: text;"
        >Build Tools
      </span>
    </h1>

    <p class="mt-4 sm:mt-6 text-base sm:text-lg">
      Fast Brake integrates seamlessly with webpack, Vite, Rollup, esbuild, and other modern build tools.
    </p>

    <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 mt-6 sm:mt-8">
      <a href={resolveDocsUrl("setup")} class="w-full sm:w-auto">
        <button class="btn btn-lg sm:btn-md text-white border-0 hover:opacity-90 w-full sm:w-auto" style="background: linear-gradient(90deg, rgba(255, 69, 0, 1) 2%, rgba(255, 140, 0, 1) 55%, rgba(255, 165, 0, 1) 100%);"> Get started </button>
      </a>

      <a href={resolveDocsUrl("advanced-features")} class="w-full sm:w-auto">
        <button class="btn btn-lg sm:btn-md btn-outline w-full sm:w-auto"> See examples </button>
      </a>
    </div>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6 lg:gap-8 mt-8 sm:mt-10 xl:mt-0">
    {
      buildTools.map((tool) => (
        <a 
          href={tool.url} 
          target="_blank" 
          rel="noopener noreferrer"
          class="bg-base-200 hover:bg-base-300 transition-colors rounded-xl sm:rounded-2xl flex justify-center items-center aspect-square group"
        >
          <img
            class="p-4 sm:p-6 lg:p-8 h-20 w-20 sm:h-24 sm:w-24 lg:h-32 lg:w-32 group-hover:scale-110 transition-transform"
            src={tool.logo}
            alt={tool.name}
          />
        </a>
      ))
    }
  </div>
</div>
