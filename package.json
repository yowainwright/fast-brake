{
  "name": "brakefast",
  "version": "0.0.1",
  "description": "A tool to help manage and optimize build performance by analyzing and caching build dependencies ðŸš€ âš¡",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "bin": {
    "brakefast": "./dist/index.js"
  },
  "scripts": {
    "build": "turbo run build-dist",
    "build-dist": "bun run clean-dist && tsup src/index.ts --format esm,cjs --dts --minify",
    "clean-dist": "rimraf dist",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "dev": "bun run --cwd site dev",
    "lint": "turbo run lint-src",
    "lint-fix": "eslint",
    "lint-src": "eslint",
    "pre-commit": "lint-staged --quiet && bun run test",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "bun run test && bun run build",
    "preview": "bun run --cwd site preview",
    "release": "release-it",
    "test": "bun test",
    "typecheck": "turbo run typecheck-src",
    "typecheck-src": "tsc --noEmit",
    "update": "codependence --update && bun run update-site-deps",
    "update-site-deps": "cd site && bun update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/brakefast.git"
  },
  "keywords": [
    "build",
    "performance",
    "caching",
    "optimization",
    "dependencies",
    "build-tools",
    "typescript",
    "cli"
  ],
  "author": "Jeff Wainwright <https:jeffry.in> (yowainwright@gmail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yowainwright/brakefast/issues"
  },
  "homepage": "https://jeffry.in/brakefast/",
  "workspaces": [
    "site"
  ],
  "dependencies": {
    "commander": "14.0.0",
    "fast-glob": "3.3.3",
    "gradient-string": "^3.0.0",
    "ora": "^8.1.0",
    "p-limit": "^6.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@commitlint/format": "^19.5.0",
    "@eslint/js": "^9.13.0",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "24.1.0",
    "codependence": "^0.3.1",
    "eslint": "9.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "16.1.2",
    "path-exists-cli": "^2.0.0",
    "prettier": "3.6.2",
    "release-it": "19.0.4",
    "rimraf": "6.0.1",
    "stdouttojson": "1.0.0",
    "tslib": "2.8.1",
    "tsup": "8.5.0",
    "tsx": "^4.19.2",
    "turbo": "2.5.5",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.12.2",
    "vite": "7.0.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release"
    }
  },
  "packageManager": "bun@1.1.38"
}
